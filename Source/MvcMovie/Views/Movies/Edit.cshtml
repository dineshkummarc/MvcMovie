@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="vidform">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true) 
        @Form.HiddenID(Model.ID)
        //@Form.TextBox(name: "Title", value: Model.Title)  
        @Form.TextBoxRequired(name: "Title", value: Model.Title) 
        @Form.TextBox(name: "Genre", value: Model.Genre) 
        @Form.TextBoxNumber(name: "Price", value: Model.Price) 
        @Form.TextBox(name: "Rating", value: Model.Rating) 
        @Form.Submit()
    }
</div>
 

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
