<div class="vidform">
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true) 
        @Form.HiddenID(Model.ID)
        @Form.TextBoxRequired(name: "Title", value: Model.Title) 
        @Form.Submit()
    }
</div>
 

